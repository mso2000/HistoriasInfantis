<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="HistoryTheme" parent="AppTheme">
        <item name="android:windowEnterTransition">@transition/history_window_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/history_window_return_transition</item>
    </style>

    <style name="ParagraphItemTheme" parent="ListItemTheme">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:elevation">@dimen/history_elevation</item>
    </style>

    <style name="WidgetTheme.FAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:layout_margin">@dimen/widget_title_margin</item>
        <item name="android:elevation">@dimen/widget_fab_elevation</item>
        <item name="android:background">@drawable/background_circle</item>
        <item name="android:padding">@dimen/widget_fab_padding</item>
        <item name="android:src">@drawable/ic_settings_widget</item>
    </style>

</resources>