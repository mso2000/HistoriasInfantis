<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/WidgetTheme.Config.Divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/widget_config_bottom_height"
        android:layout_gravity="end">

        <Button
            android:id="@+id/button_cancel"
            style="@style/WidgetTheme.Config.Button"
            android:text="@string/widget_button_cancel" />

        <Button
            android:id="@+id/button_ok"
            style="@style/WidgetTheme.Config.Button"
            android:text="@string/widget_button_ok" />
    </LinearLayout>
</LinearLayout>