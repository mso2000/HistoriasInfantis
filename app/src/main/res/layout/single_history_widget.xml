<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    style="@style/WidgetTheme">

    <ImageView
        android:id="@+id/appwidget_background"
        style="@style/WidgetTheme.Image" />

    <TextView
        android:id="@+id/appwidget_title"
        style="@style/WidgetTheme.Title"
        android:visibility="gone"
        tools:text="Miguel Caramelo e mais um título estupidamente grande pra testar a quebra de linha e a hifenização do android"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/appwidget_error"
        style="@style/WidgetTheme.Error"
        android:text="@string/widget_loading"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/appwidget_button"
        style="@style/WidgetTheme.FAB" />

</FrameLayout>